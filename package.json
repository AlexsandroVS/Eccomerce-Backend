{
  "name": "eccomerce",
  "version": "1.0.0",
  "description": "E-commerce backend with PostgreSQL, MongoDB, and Redis",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    
    "test:connections": "ts-node src/config/testConnections.ts",
    "test:health": "curl http://localhost:3000/health || echo 'Server not running'",
    
    "deploy:prepare": "npm run build && npm run prisma:generate && npm run prisma:migrate:deploy",
    "deploy:test": "npm run test:connections && echo 'All connections working'",
    
    "clean": "rm -rf dist",
    "clean:install": "rm -rf node_modules package-lock.json && npm install",
    
    "lint": "echo 'No linter configured'",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["ecommerce", "api", "postgresql", "mongodb", "redis"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/ioredis": "^4.28.10",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mongodb": "^4.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.17",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "prisma": "^6.8.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.16.0",
    "multer": "^1.4.5-lts.2",
    "stripe": "^18.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0"
  }
}